{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Snack Money",
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Overview",
        "groups": [
          {
            "group": "Introduction",
            "pages": [
              "/introduction/overview",
              "/introduction/getting-started"
            ]
          }
        ]
      },
      {
        "tab": "API reference",
        "groups": [
          {
            "group": "API documentation",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Payments",
            "openapi": "https://api.snack.money/openapi.json?tags=Payments&group_by=Farcaster,X,Email,Web"
          },
          {
            "group": "Rewards",
            "openapi": "https://api.snack.money/openapi.json?tags=Rewards&group_by=Farcaster"
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Website",
          "href": "https://snack.money",
          "icon": "globe"
        }
      ]
    }
  },
  "api": {
    "playground": {
      "display": "interactive",
      "proxy": true
    },
    "examples": {
      "languages": [
        "curl",
        "python",
        "javascript"
      ],
      "defaults": "required"
    }
  },
  "logo": {
    "light": "/logo/snack-money.svg",
    "dark": "/logo/snack-money.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:hi@mintlify.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://dashboard.mintlify.com"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/snackmoneyapp",
      "github": "https://github.com/snack-money",
      "website": "https://snack.money"
    }
  }
}